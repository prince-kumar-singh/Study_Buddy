# Application
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:3000

# MongoDB
MONGODB_URI=mongodb://localhost:27017/study_buddy
MONGODB_TEST_URI=mongodb://localhost:27017/study_buddy_test

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# Google Cloud
GOOGLE_APPLICATION_CREDENTIALS=./config/google-cloud-credentials.json
GCS_BUCKET_NAME=study-buddy-uploads
GOOGLE_CLOUD_PROJECT_ID=your-project-id

# Google Cloud Speech-to-Text
GOOGLE_SPEECH_API_KEY=your-speech-api-key

# Google Cloud Pub/Sub
PUBSUB_TOPIC_TRANSCRIPTION=transcription-jobs
PUBSUB_TOPIC_AI_GENERATION=ai-generation-jobs
PUBSUB_SUBSCRIPTION_TRANSCRIPTION=transcription-jobs-sub
PUBSUB_SUBSCRIPTION_AI_GENERATION=ai-generation-jobs-sub

# Google Gemini API
GOOGLE_GEMINI_API_KEY=your-gemini-api-key
# CURRENT MODEL ARCHITECTURE (October 2025):
# - gemini-2.5-flash: Primary stable model for all tasks (DEFAULT)
# - gemini-2.5-pro: High-quality model for complex reasoning
# - gemini-2.5-flash-lite: Lightweight model for simple tasks  
# - gemini-flash-latest: Auto-updated to latest flash version
# - gemini-pro-latest: Auto-updated to latest pro version
# 
# The system automatically selects models and falls back if unavailable.
GEMINI_MODEL_NAME=gemini-2.5-flash
GEMINI_TEMPERATURE=0.7

# Vector Database (Pinecone)
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=your-pinecone-environment
PINECONE_INDEX_NAME=study-buddy-transcripts

# Alternative: Chroma Vector Database
CHROMA_URL=http://localhost:8000
CHROMA_COLLECTION_NAME=study-buddy-transcripts

# OAuth2
GOOGLE_CLIENT_ID=your-google-oauth-client-id
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret
GITHUB_CLIENT_ID=your-github-oauth-client-id
GITHUB_CLIENT_SECRET=your-github-oauth-client-secret

# Cloudinary (Document Storage)
# Official format (Recommended): Copy from https://console.cloudinary.com/
CLOUDINARY_URL=cloudinary://your_api_key:your_api_secret@your_cloud_name

# Alternative format (if not using CLOUDINARY_URL):
# CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
# CLOUDINARY_API_KEY=your-cloudinary-api-key
# CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
FREE_TIER_QA_LIMIT=10
QA_COOLDOWN_SECONDS=30

# File Upload
MAX_FILE_SIZE=26214400
MAX_FILES_PER_SESSION=5
ALLOWED_VIDEO_DURATION=10800000

# LangSmith (Optional - for debugging)
LANGCHAIN_TRACING_V2=true
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com
LANGCHAIN_API_KEY=your-langsmith-api-key
LANGCHAIN_PROJECT=study-buddy
LANGCHAIN_CALLBACKS_BACKGROUND=true

# Email (for notifications)
# Enable/disable email notifications (set to 'true' to enable)
ENABLE_EMAIL_NOTIFICATIONS=false

# SMTP configuration (Gmail example)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
# For Gmail, use an "App Password" instead of your regular password
# Generate one at: https://myaccount.google.com/apppasswords
SMTP_PASS=your-app-password

# Email sender address (will appear in "From" field)
EMAIL_FROM="Study Buddy <noreply@studybuddy.ai>"

# Other SMTP providers:
# - Outlook: smtp.office365.com, port 587
# - Yahoo: smtp.mail.yahoo.com, port 587
# - SendGrid: smtp.sendgrid.net, port 587 (use API key as password)
# - AWS SES: email-smtp.us-east-1.amazonaws.com, port 587

# Sentry (Error tracking)
SENTRY_DSN=your-sentry-dsn

# Feature Flags
ENABLE_OAUTH=true
ENABLE_WEBSOCKET=true
ENABLE_VECTOR_STORE=true
ENABLE_CACHE=true
ENABLE_EMAIL_NOTIFICATIONS=false
